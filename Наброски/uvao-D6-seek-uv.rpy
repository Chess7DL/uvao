        $ sunset_time()
        scene bg ext_house_of_mt_sunset
        play ambience ambience_forest_evening fadein 3
    else:
        $ persistent.sprite_time = "day"
        $ day_time()
        scene bg ext_house_of_mt_day
        play ambience ambience_forest_day fadein 3
